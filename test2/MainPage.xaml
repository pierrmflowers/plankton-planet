                Margin="10"
                Spacing="20">
                <StackLayout Margin="20">
                    <Label
                        Text="MMSI number (123456789)" 
                        />
                    <Entry x:Name="entry1"
                        Grid.Row="2"
                        HeightRequest="40"
                        MaxLength="9"
                        Placeholder="Ship-ID"
                        TextChanged="OnEntryTextChanged"
                        Completed="OnEntryCompleted" />
                </StackLayout>
                <StackLayout Margin="20">
                    <Label
                        Text="LEG Number (000)" 
                        />
                    <Entry x:Name="entry2"
                        MaxLength="3"
                        Placeholder="LEG"
                        TextChanged="OnEntryTextChanged"
                        Completed="OnEntryCompleted" />
                </StackLayout>
                <StackLayout Margin="20">
                    <Label
                        Text="Name/Surname" 
                        />
                    <Entry x:Name="entry3"
                        MaxLength="100"
                        Placeholder="Investigator"
                        TextChanged="OnEntryTextChanged"
                        Completed="OnEntryCompleted" />
                </StackLayout>
                <StackLayout Margin="20">
                    <Label
                        Text="Station" 
                    />
                    <Entry x:Name="entry4"
                        MaxLength="3"
                        Placeholder="000"
                        TextChanged="OnEntryTextChanged"
                        Completed="OnEntryCompleted" />
